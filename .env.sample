# ============================================
# FGI Trading Bot Configuration
# ============================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# DRIFT PROTOCOL (Solana)
# --------------------------------------------

# Your Solana wallet private key (base58 format)
# Get from: phantom wallet export or solana-keygen
SOLANA_PRIVATE_KEY=

# Solana RPC endpoint
# Free: https://api.mainnet-beta.solana.com
# Paid: https://solana-mainnet.core.chainstack.com/YOUR_KEY
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Drift environment: mainnet-beta or devnet
DRIFT_ENV=mainnet-beta

# Drift subaccount configuration
DRIFT_SUBACCOUNT_ID=0  # SubAccount ID (0-255)
DRIFT_AUTO_CREATE_SUBACCOUNT=true
DRIFT_SUBACCOUNT_NAME="Trading Bot Account"  # Optional name for subaccount

# Drift trading parameters
MAX_SLIPPAGE_BPS=100  # Max slippage in basis points (100 = 1%)
ORACLE_STALENESS_THRESHOLD=30  # Max oracle age in seconds

# --------------------------------------------
# HYPERLIQUID PROTOCOL
# --------------------------------------------

# Your Ethereum wallet private key (hex format with 0x prefix)
# SECURITY: Never share this key!
HYPERLIQUID_PRIVATE_KEY=

# Network selection
# true = testnet (safe for testing with fake money)
# false = mainnet (real money)
HYPERLIQUID_TESTNET=true

# Trading asset (ETH, BTC, etc.)
HYPERLIQUID_ASSET=ETH

# Leverage for positions (1-50x)
# Conservative: 1-3x, Moderate: 3-5x, Aggressive: 5-10x
HYPERLIQUID_LEVERAGE=3

# --------------------------------------------
# IMPORTANT NOTES
# --------------------------------------------

# BOTH bots now use SMART POLLING:
# - Automatically sync with candle boundaries (15min, 1h, 4h, 24h)
# - Check 5 minutes after each new candle opens
# - No need to configure polling intervals manually
# - The data interval is configured in trading-config.yaml
#
# FGI_CHECK_INTERVAL_MS is now DEPRECATED and ignored