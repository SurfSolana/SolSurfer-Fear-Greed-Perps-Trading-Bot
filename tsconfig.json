{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["bun-types"],
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./web/*"],
      "@/components/*": ["./web/components/*"],
      "@/lib/*": ["./web/lib/*"],
      "@lifeguard/trading-core": ["./lib/index.ts"],
      "@lifeguard/trading-core/*": ["./lib/*"]
    },
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": [
    "lib/**/*.ts",
    "backtesting/**/*.ts",
    "examples/**/*.ts",
    "web/**/*.ts",
    "web/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "web/.next",
    "web/out"
  ]
}